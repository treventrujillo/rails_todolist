<h1>Create a new todo</h1>

<%= form_for @todo do |f| %>
  <%= f.label :todo %>
  <%= f.text_field :todo, placeholder: 'Enter Todo' %>

  <%= f.label :owner %>
  <%= f.text_field :owner, placeholder: 'Who entered this?' %>

  <%= f.label :due %>
  <%= f.text_field :due, placeholder: 'When is this due?' %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', todos_path %>
